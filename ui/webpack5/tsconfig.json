{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2017",
      "WebWorker"
    ],
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ESNext",
    "importsNotUsedAsValues": "remove"
  },
  "include": [
    "src/**/*",
    "src/node_modules/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "static/*"
  ]
}